{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "React": "writable"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true,
      "arrowFunctions": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "react",
    "jest",
    "prettier"
  ],
  "rules": { // 若專案有加入其他規則請在 README 裡告知為何使用
    "react/prop-types": 0,
    "no-console": 0,
    "require-yield": 0, // 給 sagas 的設定
    "prettier/prettier": ["error", {"jsxSingleQuote": false}]
  }
}
